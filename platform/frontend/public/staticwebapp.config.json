{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "*.svg", "*.js", "*.css", "*.png", "*.jpg", "*.ico"]
  },
  "mimeTypes": {
    ".js": "application/javascript",
    ".mjs": "application/javascript",
    ".json": "application/json",
    ".svg": "image/svg+xml",
    ".css": "text/css",
    ".html": "text/html",
    ".woff": "font/woff",
    ".woff2": "font/woff2"
  },
  "routes": [
    {
      "route": "/assets/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/*.html",
      "headers": {
        "Cache-Control": "public, no-cache, must-revalidate"
      }
    },
    {
      "route": "/",
      "headers": {
        "Cache-Control": "public, no-cache, must-revalidate"
      }
    }
  ],
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "Cache-Control": "public, no-cache, must-revalidate"
  }
}
